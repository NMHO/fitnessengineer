extends layout

block content
    div.index
        div.container
            div.row
                div.col-xs-12
                    nav.navbar.navbar-inverse
                        .container-fluid
                            ul.nav.navbar-nav
                                li.active
                                    a(href='/') Loginside
            div.row
                div.col-xs-12.text-center.textmargin
                    h1 Login
            div.row
                div.col-xs-8.textmargin
                    h3 Her kan du logge ind med eksisterende bruger
            div.row
                div.col-xs-4.textmargin                   
                    form#formAddUser(name="login",method="get",action="/validateLogin")                        
                        .form-group
                            label(for='emailOrUsername') Brugernavn eller Email:
                            input#email.form-control(type="text", name="emailOrUsername")
                        .form-group
                            label(for='pass') Password:
                            input#password.form-control(type="password", name="password", )
                        .form-group
                            button(type="submit").btn.btncolor.btn-primary Submit